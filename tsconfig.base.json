{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@rn-skilllab/ui": ["packages/ui"],
      "@rn-skilllab/utils": ["packages/utils"],
      "@rn-skilllab/types": ["packages/types"]
    },
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "exclude": ["node_modules"]
}
